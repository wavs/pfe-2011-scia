template <class T>
T* Singleton<T>::instance = 0;

//------------------------------------------------------------------------------
//------------------------------------------------------------------------------

template <class T>
inline
T*
Singleton<T>::get ()
{
	if(instance == NULL)
		instance = new T ();

	return instance;
}

//------------------------------------------------------------------------------
//------------------------------------------------------------------------------

template <class T>
void
Singleton<T>::kill ()
{
	delete instance;
	instance = NULL;
}

